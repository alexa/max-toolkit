+        stateStr = "fulfilled";
+    } else if (state.isRejected()) {
+        stateStr = "rejected";
+    } else {
+        stateStr = "unknown";
+    }
+
+    return out << "PromiseState(" << std::hex << state.getHandle() << "/" << stateStr << ")";
+}
