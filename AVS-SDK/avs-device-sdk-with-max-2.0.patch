+ * Promise<std::string> promise1 = ...;
+ * // Installing eventual result consumers.
+ * auto promise2 = promise.then<std::size_t>(m_executor,
+ *     onFulfilled,
+ *     onRejected);
+ * promise2.finally(
+ *     m_executor,
+ *     [](std::size_t value) {
